{
  "compilerOptions": {
    "target": "es6", // или "esnext", если ваш проект поддерживает более современные браузеры
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // отключите, если не используете JavaScript
    "skipLibCheck": false, // включите для строгой проверки библиотек
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // оставьте включенным для строгой проверки типов, но можете отключить временно
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
